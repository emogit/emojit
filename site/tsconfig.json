{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "@emogit/emojit-core": ["../core/src/index.ts"],
      "@emogit/emojit-react-core": ["../react-core/src/index.ts"]
    }
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../react-core"
    }
  ],
  "include": [
    "src"
  ]
}
